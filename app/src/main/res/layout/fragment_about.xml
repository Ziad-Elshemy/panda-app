<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/main_image"
                android:layout_width="117dp"
                android:layout_height="150dp"
                android:src="@drawable/panda"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/about_us_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About us"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="32sp"
                android:fontFamily="@font/bold"
                android:textAllCaps="false"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_image" />

            <ImageView
                android:id="@+id/google_play_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:src="@drawable/google_play_icon"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="50dp"
                app:layout_constraintTop_toBottomOf="@+id/about_us_text" />

            <ImageView
                android:id="@+id/direct_download_apk_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:src="@drawable/app_store_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/google_play_icon" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:fontFamily="@font/regular"
                android:lineHeight="28dp"
                android:paddingBottom="100dp"
                android:layout_marginTop="30dp"
                android:text="The largest e-commerce site in the Arab world. Every month, Souq.com attracts more than 30 million visits to its catalog of more than 2 million unique products in 10 different categories, including books, cars, consumer electronics, home goods, fashion, watches, fragrances, toys, and baby products. Founded in 2023, Panda today operates as an award-winning retailer and online marketplace that allows small and medium businesses, merchants, brands and distributors to distribute their products online."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/google_play_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>