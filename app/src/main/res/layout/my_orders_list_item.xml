<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <androidx.cardview.widget.CardView
                android:id="@+id/image_card"
                android:layout_width="140dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="20dp"
                android:elevation="20dp"
                app:cardElevation="20dp"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="20dp"
                android:padding="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/my_orders_image"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/itemName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toTopOf="@id/image_card"
                app:layout_constraintStart_toEndOf="@id/image_card"
                android:text="Laptop Lenovo  "
                android:textColor="@color/black"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/itemPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@id/itemName"
                app:layout_constraintStart_toEndOf="@id/image_card"
                android:text="YER 30,000"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/completed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                app:layout_constraintTop_toBottomOf="@id/itemPrice"
                app:layout_constraintStart_toEndOf="@id/image_card"
                android:text="Completed"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"/>




            <TextView
                android:id="@+id/rate1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/completed"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/itemPrice"
                android:background="@drawable/background_rate"
                android:text="Review Now"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"

                />




        </androidx.constraintlayout.widget.ConstraintLayout>


</layout>