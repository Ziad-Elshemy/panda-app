<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFlow.presentations.addadTheProduct.addadTheProductFragment">


        <ImageView
            android:id="@+id/submit_image_heading"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/add_product_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/added_to_cart_successfully"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/regular"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/submit_image_heading" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/shopping_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginHorizontal="60dp"
            android:backgroundTint="#2B2828"
            android:text="@string/continue_shopping"
            android:textAllCaps="false"
            app:cornerRadius="10dp"
            android:fontFamily="@font/regular"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewCard_Btn" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/viewCard_Btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E1DDDD"
            android:textColor="@color/black"
            app:cornerRadius="10dp"
            android:text="@string/view_cart"
            android:layout_marginHorizontal="30dp"
            android:textAllCaps="false"
            android:paddingVertical="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:fontFamily="@font/light"
            app:layout_constraintTop_toBottomOf="@id/order_tv"
            android:layout_marginBottom="40dp"/>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>