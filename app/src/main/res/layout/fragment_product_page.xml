    <TextView
        android:id="@+id/reviews_sub_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:textAlignment="textStart"
        android:text="Panda mission is to simplify and improve the lives of people and build an awesome organization that inspires the lives of people and build an awesome organization that inspires."
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_line_separator1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/product_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/product_line_separator2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/reviews_list_item"
        android:layout_marginBottom="10dp"
        />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>



    <LinearLayout
        android:id="@+id/menu_num_of_items_container"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_black_stroke_background"
        app:layout_constraintEnd_toStartOf="@id/add_to_cart_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <Spinner
            android:id="@+id/dropdown_menu_num_of_items"
            style="@style/Widget.AppCompat.DropDownItem.Spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/black"
            android:layout_gravity="center"
            android:contentDescription="Number of items"
            android:spinnerMode="dropdown"
            app:layout_constraintEnd_toStartOf="@id/add_to_cart_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </LinearLayout>

    <Button
        android:id="@+id/add_to_cart_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/regular"
        android:paddingHorizontal="20dp"
        android:text="Add to Cart"
        android:textColor="@color/white"
        android:layout_marginHorizontal="50dp"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@id/menu_num_of_items_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>