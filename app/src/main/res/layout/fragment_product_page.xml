<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@id/add_to_cart_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.SearchView
                    android:id="@+id/productEditTextSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/text_input_shadow"
                    android:drawableStart="@drawable/baseline_search_24"
                    android:ems="10"
                    android:gravity="center"
                    android:fontFamily="@font/bold"
                    android:inputType="text"
                    android:paddingHorizontal="16dp"
                    android:textColorHint="@color/black_gray"
                    android:textSize="16sp"
                    app:iconifiedByDefault="false"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:queryHint="@string/what_are_you_looking_for" />


                <TextView
                    android:id="@+id/rate_icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/background_rate"
                    android:drawableRight="@drawable/baseline_star_24"
                    android:fontFamily="@font/regular"
                    android:gravity="end"
                    android:paddingHorizontal="10dp"
                    android:text="3.7"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toStartOf="@id/rate_text1"
                    app:layout_constraintTop_toBottomOf="@id/productEditTextSearch" />

                <TextView
                    android:id="@+id/rate_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/light"
                    android:text="(174)"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productEditTextSearch" />

                <TextView
                    android:id="@+id/category_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/medium"
                    android:text="Fashions"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/productEditTextSearch" />

                <TextView
                    android:id="@+id/product_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/bold"
                    android:text="T-Shirt Polo"
                    android:textColor="@color/black"
                    android:textSize="26sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_title_tv" />

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="360dp"
                    android:layout_height="220dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/product_image"
                    android:visibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_title_tv" />


                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/product_image_slider"
                    android:layout_width="0dp"
                    android:layout_height="180dp"
                    android:src="@drawable/product_image"
                    app:iss_auto_cycle="true"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintEnd_toStartOf="@id/download_icon"
                    app:layout_constraintBottom_toTopOf="@id/total_price_ET"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/product_title_tv"
                    />

        

                <ImageView
                    android:id="@+id/download_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/download_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/product_image_slider"
                    app:layout_constraintTop_toTopOf="@id/product_image_slider" />

                <ImageView
                    android:id="@+id/wish_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/baseline_favorite_border_24"
                    app:layout_constraintBottom_toTopOf="@id/share_icon"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/product_image_slider"
                    app:layout_constraintTop_toBottomOf="@id/download_icon" />

                <ImageView
                    android:id="@+id/share_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="50dp"
                    android:src="@drawable/share_icon"
                    app:layout_constraintBottom_toBottomOf="@id/product_image_slider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/product_image_slider" />
                
                <LinearLayout
                    android:id="@+id/variant_color_container"
                    android:layout_marginTop="20dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/total_price_ET"
                    app:layout_constraintStart_toStartOf="@id/price_currency_text"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/color__"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/color_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Red"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_variant_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        tools:listitem="@layout/variant_color_item"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:id="@+id/variant_size_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/variant_color_container"
                    app:layout_constraintStart_toStartOf="@id/price_currency_text"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/size__"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/size_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SM"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_variant_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:orientation="horizontal"
                        android:layout_marginTop="2dp"
                        tools:listitem="@layout/variant_size_item"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/price_currency_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/light"
                    android:text="YER"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/product_image_slider" />

                <TextView
                    android:id="@+id/total_price_ET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/medium"
                    android:text="488.00"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/price_currency_text"
                    app:layout_constraintTop_toBottomOf="@id/product_image_slider" />

                <View
                    android:id="@+id/prices_line_separator1"
                    android:layout_width="14dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="29dp"
                    android:layout_marginStart="15dp"
                    android:background="@android:color/black"
                    app:layout_constraintStart_toEndOf="@id/total_price_ET"
                    app:layout_constraintTop_toBottomOf="@+id/product_image_slider" />

                <TextView
                    android:id="@+id/new_price_currency_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="23dp"
                    android:fontFamily="@font/light"
                    android:text="YER"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    app:layout_constraintStart_toEndOf="@id/prices_line_separator1"
                    app:layout_constraintTop_toBottomOf="@id/product_image_slider" />

                <TextView
                    android:id="@+id/new_total_price_ET"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:fontFamily="@font/medium"
                    android:text="488.00"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/new_price_currency_text"
                    app:layout_constraintTop_toBottomOf="@id/product_image_slider" />


                <View
                    android:id="@+id/product_line_separator3"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divider_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/variant_size_container" />


                <androidx.cardview.widget.CardView
                    android:id="@+id/payment_method1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="20dp"
                    android:elevation="20dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/variant_size_container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:padding="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/medium"
                            android:text="@string/this_item_will_be_delivered_in_72_hours"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <View
                    android:id="@+id/product_line_separator2"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/divider_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/payment_method1" />

                <TextView
                    android:id="@+id/product_Details_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:text="@string/descriptions"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/price_currency_text"
                    app:layout_constraintTop_toBottomOf="@+id/product_line_separator2" />

                <!--                here is details -->

