<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">



    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_to_cart_btn">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.SearchView
                android:id="@+id/productEditTextSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_input_shadow"
                android:drawableStart="@drawable/baseline_search_24"
                android:ems="10"
                android:layout_marginHorizontal="50dp"
                app:queryHint="@string/what_are_you_looking_for"
                app:iconifiedByDefault="false"
                android:textStyle="bold"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:textColorHint="@color/black_gray"
                android:textSize="16sp"
                android:fontFamily="@font/light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"/>


            <TextView
        android:id="@+id/rate_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_rate"
        android:drawableRight="@drawable/baseline_star_24"
        android:fontFamily="@font/regular"
        android:gravity="end"
        android:paddingHorizontal="10dp"
        android:text="3.7"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/productEditTextSearch"
        app:layout_constraintEnd_toStartOf="@id/rate_text1"
        />

    <TextView
        android:id="@+id/rate_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/light"
        android:text="(174)"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/productEditTextSearch"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/category_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/medium"
        android:text="Fashions"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productEditTextSearch" />

    <TextView
        android:id="@+id/product_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/bold"
        android:text="T-Shirt Polo"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_title_tv" />

    <ImageView
        android:id="@+id/product_image"
        android:layout_width="360dp"
        android:layout_height="220dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/product_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_title_tv"
        />

    <ImageView
        android:id="@+id/download_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/download_icon"
        app:layout_constraintStart_toEndOf="@id/product_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/product_image"/>

    <ImageView
        android:id="@+id/wish_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:src="@drawable/baseline_favorite_border_24"
        app:layout_constraintStart_toEndOf="@id/product_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/download_icon"
        app:layout_constraintBottom_toTopOf="@id/share_icon"/>

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/share_icon"
        app:layout_constraintStart_toEndOf="@id/product_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/product_image"/>

    <TextView
        android:id="@+id/price_currency_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YER"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:textSize="11sp"
        android:fontFamily="@font/light"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/total_price_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="488.00"
        android:textColor="@color/black"
        android:layout_marginLeft="4dp"
        android:textSize="16sp"
        android:fontFamily="@font/medium"
        app:layout_constraintTop_toBottomOf="@id/product_image"
        app:layout_constraintStart_toEndOf="@id/price_currency_text"
        />

            <View
                android:id="@+id/prices_line_separator1"
                android:layout_width="14dp"
                android:layout_height="4dp"
                android:layout_marginTop="9dp"
                android:layout_marginStart="15dp"
                android:background="@android:color/black"
                app:layout_constraintStart_toEndOf="@id/total_price_ET"
                app:layout_constraintTop_toBottomOf="@+id/product_image"
                />

            <TextView
                android:id="@+id/new_price_currency_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YER"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:textSize="11sp"
                android:fontFamily="@font/light"
                app:layout_constraintTop_toBottomOf="@id/product_image"
                app:layout_constraintStart_toEndOf="@id/prices_line_separator1"
                />

            <TextView
                android:id="@+id/new_total_price_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="488.00"
                android:textColor="@color/black"
                android:layout_marginLeft="4dp"
                android:textSize="16sp"
                android:fontFamily="@font/medium"
                app:layout_constraintTop_toBottomOf="@id/product_image"
                app:layout_constraintStart_toEndOf="@id/new_price_currency_text"
                />

    <androidx.cardview.widget.CardView
        android:id="@+id/payment_method1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:elevation="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginStart="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="10dp"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/total_price_ET">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/medium"
                android:text="Delivery by wed, 15 March"
                android:textColor="@color/black"
                android:textSize="22sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/product_Details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/regular"
        android:text="Details"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_method1" />


    <TextView
        android:id="@+id/product_Reviews_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/regular"
        android:text="Reviews"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@id/productEditTextSearch"
        app:layout_constraintTop_toBottomOf="@id/payment_method1" />

    <View
        android:id="@+id/product_line_separator1"
        android:layout_width="185dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_Details_tv"
        />

    <View
        android:id="@+id/product_line_separator2"
        android:layout_width="185dp"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_Details_tv"
        />

